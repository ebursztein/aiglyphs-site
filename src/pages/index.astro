---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import IconGrid from '../components/IconGrid.svelte';
---

<Layout title="AIGlyphs - AI Icon Library">
  <div class="hero bg-base-200 py-12">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold">
          <span class="bg-gradient-to-r from-blue-500 to-purple-500 inline-block text-transparent bg-clip-text">
            AIGlyphs
          </span>
        </h1>
        <p class="py-6">
          A comprehensive collection of AI-related icons for your next project
        </p>
      </div>
    </div>
  </div>

  <IconGrid client:only="svelte"/>
</Layout>